{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample API",
    "description": "Optional multiline or single-line description in [CommonMark](http://commonmark.org/help/) or HTML.",
    "version": "0.1.9"
  },
  "servers": [
    {
      "url": "http://sso-sys.ap-southeast-1.elasticbeanstalk.com/api",
      "description": "Resource server"
    },
    {
      "url": "http://sso-sys.ap-southeast-1.elasticbeanstalk.com/oauth",
      "description": "Auth server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "oAuth": {
        "type": "oauth2",
        "description": "This API uses OAuth 2 with the implicit grant flow. [More info](https://api.example.com/docs/auth)",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "http://sso-sys.ap-southeast-1.elasticbeanstalk.com/oauth/authorize",
            "tokenUrl": "http://sso-sys.ap-southeast-1.elasticbeanstalk.com/oauth/token",
            "scopes": {
              "read": "read ",
              "write": "modify "
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    },
    {
      "oAuth": [
        "read",
        "write"
      ]
    }
  ],
  "paths": {
    "/permissions": {
      "get": {
        "summary": "Returns a list of permission.",
        "description": "Optional extended description in CommonMark or HTML.",
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  }
}